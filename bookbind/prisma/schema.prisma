generator client { 
  provider = "prisma-client-js"
} 
datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  clerkId   String   @unique
  name      String?
  bio       String?
  image     String?
  location  String?
  createdAt DateTime @default(now())

  readLater Book[]  @relation("Later")
}

model Book {
  id       String   @id @default(cuid())
  googleId String   @unique
  title    String
  author   String?
  path     String?
  authorId String

  users    User[] @relation("Later")
}